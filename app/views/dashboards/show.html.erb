<br />

<div class="booyah-box col-10 offset-1">
  <h1>What I'm Learning</h1>
  <br/>
  <% current_user.enrolled_courses.each do |course| %>
    
    <h3 class="text-center">
      <%= link_to course.title, course_path(course) %>  
    </h3>
    <br/>

    <% if course.image.present? %>
      <%= image_tag course.image, class: 'img-fluid' %>
    <% end %>
    <div class="row">
      <div class="col-12 col-sm-8">
        <%= course.description %>
      </div>
      <div class="col-12 col-sm-4 text-center">
        <%= link_to "MORE INFO", course_path(course), class: 'btn btn-md btn-primary' %>
      </div>
    </div>
  <% end %>
  <br/>
</div>

<hr class="col-8 offset-2">

<div class="booyah-box col-10 offset-1">
  <h1>What I'm Teaching</h1>
  <br/>
  <% current_user.courses.each do |course| %>

    <h3 class="text-center">
      <%= link_to course.title, instructor_course_path(course) %>
    </h3>
    <br/>

    <% if course.image.present? %>
      <%= image_tag course.image, class: 'img-fluid' %>
      <br/>
    <% end %>
    <div class="row">
      <div class="col-12 col-sm-8">
        <%= course.description %>
      </div>
      <div class="col-12 col-sm-4 text-center">
        <%= link_to "MORE INFO", instructor_course_path(course), class: 'btn btn-md btn-primary' %>
      </div>
    </div>
    <br/>
  <% end %>
</div>