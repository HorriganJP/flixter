<br>
<div class="booyah-box col-10 offset-1">
  <div class="sign-up-header">
    <h1>Add a New Course</h1>
  </div>
  <%= simple_form_for @course, url: instructor_courses_path do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :cost %>
    <%= f.input :image %>
    <br>
    
    <%= f.submit "Create", class: 'btn-sign-up col-10 offset-1' %>
    <br>
       
  <% end %>
  <br>
</div>