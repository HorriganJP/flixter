<br>

<div class="booyah-box col-10 offset-1">
  <h1 class="text-center"><%= @course.title %></h1>
  <br/>

  <div class="row">
    <div class="col-sm-6 col-12 text-center">
      <h3> Course Cost: <span class="badge badge-primary"><%= number_to_currency @course.cost %></span></h3>
    </div>
   

    <% if current_user && current_user == @course.user %>
    <div class="col-sm-6 col-12 text-center">
      <%= link_to 'Manage Content', instructor_course_path(@course), class: 'btn btn-danger btn-large' %>
      <br/>
      <br/>
    </div>
    <% end %>
  </div>

   <div class="text-center">
      <%= @course.description %>
      <br/>    
      <br/>
  </div>

  <div class="col-12">
    <% @course.sections.each do |section| %>
      <div class="section">
        <%= section.title %>
        <% section.lessons.each do |lesson| %>
          <div class="lesson">
            <%= link_to lesson_path(lesson) do %>
              <b><%= lesson.title %></b>
              -
              <%= lesson.subtitle %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>


